<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
  "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
  "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
  
  <tiles-definitions>

		<!-- tiles 적용 -->
		<definition name="tilesLayout" template="/WEB-INF/tiles/tilesLayout.jsp">
			<put-attribute name="tilesTop" value="/WEB-INF/tiles/header.jsp" />
			<put-attribute name="content" value="" />
		</definition>
	 
		<definition name="*.tiles" extends="tilesLayout">
			<put-attribute name="content" value="/WEB-INF/{1}.jsp" />
		</definition>
		
		<definition name="*/*.tiles" extends="tilesLayout">
			<put-attribute name="content" value="/WEB-INF/{1}/{2}.jsp" />
		</definition>
		
		<definition name="ryu_tilesLayout" template="/WEB-INF/tiles/ryu_tilesLayout.jsp">
			<put-attribute name="tilesTop" value="/WEB-INF/tiles/header.jsp" />
			<put-attribute name="content" value="" />
		</definition>
		
		<definition name="*.tiless" extends="tilesLayout">
			<put-attribute name="content" value="/WEB-INF/{1}.jsp" />
		</definition>
		
		<definition name="*/*.tiless" extends="tilesLayout">
			<put-attribute name="content" value="/WEB-INF/{1}/{2}.jsp" />
		</definition>
	</tiles-definitions>